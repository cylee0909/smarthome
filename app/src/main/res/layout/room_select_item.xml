<?xml version="1.0" encoding="utf-8"?>
<com.babt.smarthome.widget.StateLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/air_clean_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rsi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/room_1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rsi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="空气净化"
            android:textColor="@color/function_list_item_title"
            android:textSize="@dimen/text_level_2" />

        <TextView
            android:id="@+id/rsi_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="检测室内空气PM2.5参数"
            android:textColor="@color/function_list_item_desc"
            android:textSize="@dimen/text_level_4" />
    </LinearLayout>

    <com.babt.smarthome.widget.StateTextView
        android:id="@+id/rsi_select_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:text="设置参数"
        android:padding="8dp"
        android:textColor="@color/white"
        android:background="@drawable/room_sel_text_bg"/>
</com.babt.smarthome.widget.StateLinearLayout>